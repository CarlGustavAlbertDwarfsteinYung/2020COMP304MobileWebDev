<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:columnCount="4"
    android:rowCount="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/calculations"
        android:layout_rowWeight=".25"
        android:layout_columnSpan="4"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:gravity="right"
        android:text="1234"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:autoSizeTextType="none" />

    <TextView
        android:id="@+id/result"
        android:layout_rowWeight=".25"
        android:layout_columnSpan="4"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:gravity="right"
        android:text="1234"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_perc"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="%" />

    <Button
        android:id="@+id/button_pow"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="^" />

    <Button
        android:id="@+id/button_sqrt"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="v" />

    <Button
        android:id="@+id/button_clear"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="C" />

    <Button
        android:id="@+id/button_7"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="7" />

    <Button
        android:id="@+id/button_8"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="8" />

    <Button
        android:id="@+id/button_9"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="9" />

    <Button
        android:id="@+id/button_div"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="/" />

    <Button
        android:id="@+id/button_4"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="4" />

    <Button
        android:id="@+id/button_5"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="5" />

    <Button
        android:id="@+id/button_6"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="6" />

    <Button
        android:id="@+id/button_mult"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="-" />

    <Button
        android:id="@+id/button_1"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="1" />

    <Button
        android:id="@+id/button_2"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="2" />

    <Button
        android:id="@+id/button_3"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="3" />

    <Button
        android:id="@+id/button_minus"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="-" />

    <Button
        android:id="@+id/button_0"
        android:layout_rowWeight="0.14285714286"
        android:layout_columnWeight=".25"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="0" />

    <Button
        android:id="@+id/button_dot"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="." />

    <Button
        android:id="@+id/button_equal"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="=" />

    <Button
        android:id="@+id/button_plus"
        android:layout_rowWeight=".25"
        android:layout_columnWeight="0.14285714286"
        android:background="#414141"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:text="+" />
</GridLayout>
